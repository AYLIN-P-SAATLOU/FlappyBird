<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AvaloniaApplication1.MainWindow"
        Title="Flappy Bird" Width="400" Height="600"
        KeyDown="OnKeyDown">
    
    <Canvas Name="GameCanvas" Background="SkyBlue">
        <Canvas Name="Bird" Width="50" Height="30" Canvas.Left="50" Canvas.Top="200">
            <Ellipse Fill="Yellow" Width="50" Height="30" Stroke="Black" StrokeThickness="1"/>
            
            <Ellipse Fill="White" Width="10" Height="10" Canvas.Left="30" Canvas.Top="5"/>
            
            <Ellipse Fill="Black" Width="4" Height="4" Canvas.Left="35" Canvas.Top="8"/>
            
            <Polygon Points="0,0 12,4 0,8" Fill="Orange" Stroke="Black" StrokeThickness="1" 
                Canvas.Left="45" Canvas.Top="15"/>
        </Canvas>

        <TextBlock Name="ScoreText" Text="0" FontSize="40" Foreground="White" 
                   FontWeight="Bold" Canvas.Left="180" Canvas.Top="20" />

        <Border Name="GameOverPanel" IsVisible="False" Background="#AA000000" 
                Width="400" Height="600">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="GAME OVER" FontSize="40" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Name="FinalScoreText" Text="Score: 0" FontSize="20" 
                           Foreground="Yellow" HorizontalAlignment="Center" Margin="0,10"/>
                <Button Content="Restart Game" Click="OnRestartClick" Padding="20,10" 
                        HorizontalAlignment="Center" Background="White" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Canvas>
</Window>
